                        android:padding="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/dapur2"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
